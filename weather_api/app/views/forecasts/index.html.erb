<form action="/" method="get">
    Zip Code: <input type="text" name="zip_code">
    <input type="submit" value="Find Weather">
</form>

<h1>3 Day Forecast for <%= @zip_code %></h1>

<% @forecasts.each do |forecast| %>
    <h2><%= forecast.day %></h2>
        <div>High: <%= forecast.high %></div>
        <div>Low: <%= forecast.low %></div>
        <div>Conditions: <%= forecast.description %></div>
<% end %>

